{% extends 'base.html.twig' %}

{% block title %}Welcome to Labyrinth Online!{% endblock %}

{% block body %}
<div class="container">
<div class="row">
	<div class="col col-6">
		{% if app.user == NULL %}
			<h2>Sign In</h2>
			{% include "auth/components/sign_in_form.html.twig" with { 'error': null, 'last_username': '' } %}
		{% else %}
			{{ form(newBoardForm) }}
		{% endif %}
	</div>
	<div class="col col-6">
		{% if app.user == NULL %}
			<h2>Sign Up</h2>
			{{ form(signUpForm) }}
		{% else %}
		<ul>
		{% for board in boards %}
			<li><a href="{{ url('board_view', { 'id': board.id }) }}">Board #{{ board.id }}</a> </li>
		{% endfor %}
		</ul>

		{% endif %}
	</div>
</div>
</div>
{% endblock %}