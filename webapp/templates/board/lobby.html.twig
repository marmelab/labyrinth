{% extends 'base.html.twig' %}

{% block title %}Waiting for {{ board.remainingSeats }} players{% endblock %}

{% block meta %}
<meta http-equiv="Refresh" content="5">
{% endblock %}

{% set player = app.session.get('player') %}

{% block body %}
<div class="container">

    <div class="row justify-content-center">
        <div class="col col-8">
            <div class="alert alert-info">
                Waiting for {{ board.remainingSeats }} more players to start the game.
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col col-8">
            <div class="alert alert-dark">
                Share the game URL with other players: <a href="{{ app.request.uri }}">{{ app.request.uri }}</a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col col-8 justify-content-center">
            <h1>Current players</h1>
            <ul>
                {% for gamePlayer in board.players %}
                    <li>{{ gamePlayer.name }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col col-8">
            {% if canJoin %}
            {{ form(form) }}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
